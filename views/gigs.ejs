<%- include ('./partials/header') %>
  <section id="gigs" class="container">
    <h1>All Gigs</h1>
    <% if (gigs.length > 0) {%>
      <% gigs.slice().reverse().forEach((gig) => { %>
        <div class="gig">
          <h3><%= gig.title %></h3>
          <p><%= gig.description %></p>
          <ul>
            <li>Budget: <%= gig.budget %></li>
            <li><a href="mailto:<%= gig.contact_email %>" class="btn btn-reverse">Apply Now</a></li>
          </ul>
          <div class="tech">
            <small>Technologies Needed: <span><%= gig.technologies %></span></small>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No available gigs</p>
    <% } %>
  </section>
<%- include ('./partials/footer') %>
